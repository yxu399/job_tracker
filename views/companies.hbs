{{!-- database table---------------------------------------------------------------------------------------------------- --}}

<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h5>List of Companies</h5>
    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addCompanyModal">Add Company</button>
  </div>
  <div class="table-responsive">
    <table id="companies-table" class="table table-bordered table-striped table-hover">
      {{!-- Header section --}}
      <thead>
          <tr>
              <th>ID</th>
              <th>Company</th>
              <th>Industry</th>
              <th>Company Size</th>
              <th>Founded Date</th>
              <th>Contact Person</th>
              <th>Contact Email</th>
              <th>Contact Phone</th>
          </tr>
      </thead>
      {{!-- Body section --}}
      <tbody>
          {{#each data}}
          <tr data-id="{{this.idCompany}}">
              <td>{{this.idCompany}}</td>
              <td>{{this.companyName}}</td>
              <td>{{this.industry}}</td>
              <td>{{this.companySize}}</td>
              <td>{{this.foundedDate}}</td>
              <td>{{this.contactPerson}}</td>
              <td>{{this.contactEmail}}</td>
              <td>{{this.contactPhone}}</td>
          </tr>
          {{/each}}
      </tbody>
  </table>
</div>

{{!-- Form to add a record to the table  -----------------------------------------------------}}
<div class="modal fade" id="addCompanyModal" tabindex="-1" aria-labelledby="addCompanyModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="addCompanyModalLabel">Add Company</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form id="add-company-form-ajax">
            <div class="mb-3">
              <label for="input-companyName-ajax" class="form-label">Company Name: </label>
              <input type="text" name="input-companyName-ajax" id="input-companyName-ajax" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="input-industry-ajax" class="form-label">Industry: </label>
                <input type="text" name="input-industry-ajax" id="input-industry-ajax" class="form-control" required>        
            </div>
            <div class="mb-3">
                <label for="input-companySize-ajax" class="form-label">Company Size: </label>
                <input type="number" step="1.0" name="input-companySize-ajax" id="input-companySize-ajax" class="form-control">      
            </div>
            <div class="mb-3">
                <label for="input-foundedDate-ajax" class="form-label">Founded Date: </label>
                <input type="date" name="input-foundedDate-ajax" id="input-foundedDate-ajax" class="form-control">   
            </div>
            <div class="mb-3">
                <label for="input-contactPerson-ajax" class="form-label">Contact Person: </label>
                <input type="text" name="input-contactPerson-ajax" id="input-contactPerson-ajax" class="form-control">
            </div>
            <div class="mb-3">
                <label for="input-contactEmail-ajax" class="form-label">Contact Email: </label>
                <input type="text" name="input-contactEmail-ajax" id="input-contactEmail-ajax" class="form-control">
            </div>
            <div class="mb-3">
                <label for="input-contactPhone-ajax" class="form-label">Contact Phone: </label>
                <input type="text" name="input-contactPhone-ajax" id="input-contactPhone-ajax" class="form-control">
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              <button type="submit" class="btn btn-primary">Add Company</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
