{{!-- ----------------------------------------------------------------------------- --}}

<table id="job-postings-table">
    {{!-- Header section --}}
    <thead>
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    {{!-- Body section --}}
    <tbody>
        {{#each data}}
        <tr>
            <td>{{this.idPosting}}</td>
            <td>{{this.idCompany}}</td>
            <td>{{this.idRole}}</td>
            <td>{{this.jobTitle}}</td>
            <td>{{this.datePosted}}</td>
            <td>{{this.dateApplied}}</td>
            <td>{{this.status}}</td>
            <td>{{this.description}}</td>
            <td>{{this.annualSalary}}</td>
            <td>{{this.salaryCurrency}}</td>
            <td>{{this.location}}</td>
            <td>{{this.workMode}}</td>
            <td><button onclick="editJobPosting({{this.idPosting}})">Edit</button></td>
            <td><button onclick="deleteJobPosting({{this.idPosting}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>

<script src="/js/delete_job_posting.js"></script>

